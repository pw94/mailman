<% if notice %>
  <div class="alert alert-info">
    <%= notice %>
  </div>
<% end %>

<h1>Messages</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.subject %></td>
        <td><%= message.body %></td>
        <td><%= link_to 'Show', message %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @messages %>

<br>

<%= link_to 'New Message', new_message_path %>
